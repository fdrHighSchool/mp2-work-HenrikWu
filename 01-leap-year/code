class Main {
  public static void main(String[] args) {
    int year = 2000;
    System.out.println(isLeapYear(year));
  }
    public static boolean isLeapYear(int year){
     if (year % 4 == 0 ||){
       return true;
     }
     if(year % 100 == 0){
       return false;
     }
     if (year % 400 == 0){
       return true;
     }
      return false;
    }
   
}
